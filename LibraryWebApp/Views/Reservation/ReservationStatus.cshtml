@model LibraryWebApp.Models.Reservation

<form method="post" asp-action="Create">
    <input asp-for="Id" hidden value="@Model.Id" />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Fee</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" asp-action="ReservationStatus" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="IndexAdmin" asp-route-id="@Model.Id" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



