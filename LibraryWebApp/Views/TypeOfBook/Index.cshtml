@model IEnumerable<LibraryWebApp.Models.TypeOfBook>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Types of Books List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TypeOfBook" asp-action="Create" class="btn btn-primary">Create new Type</a>
        </div>
    </div>

    @{
        var modelTemplate = new TypeOfBook();
    }

    <br /><br />

    @if (Model.Count() > 0)
    {
       

        <table class="table table-bordered table-striped" style="width:40%" align="center">
            <thead>
                <tr>
                    <th>
                        <label asp-for="@modelTemplate.Id"></label>
                    </th>
                    <th>
                        <label asp-for="@modelTemplate.Name"></label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td width="5%">@type.Id</td>
                        <td width="50%">@type.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="TypeOfBook" asp-route-Id="@type.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@type.Id" asp-action="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No type exists.</p>
    }
</div>