@model LibraryWebApp.Models.Worker

<form method="post">
    <input asp-for="@Model.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Book Details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Earnings"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Earnings" class="form-control" />
                        <span asp-validation-for="@Model.Earnings" class="text-danger"></span>
                    </div>
                 </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <br />
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
</form>
