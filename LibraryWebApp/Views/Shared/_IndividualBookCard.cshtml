@model LibraryWebApp.Models.Book
@{ 
    var filterTypes = "";
    foreach(var i in Model.BookType)
    {
        filterTypes += i.BookType.Name;
        filterTypes += " ";
    }
    var shortDescription = "";
    if(Model.Description.Length < 200)
    {
        shortDescription = (@Model.Description + "    ").Substring(0, Model.Description.Count()).Trim();
    }
    else
    {
        shortDescription = (@Model.Description + "    ").Substring(0, 200).Trim();
    }
}
 
<div class="col-lg-4 col-md-6 pb-4 filter @filterTypes">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:2px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left"> <b>@Model.Title</b></label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h5">@Model.Amount</span> / @Model.Amount</label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" style="max-height:300px;" src="@WC.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                @foreach (var type in Model.BookType)
                {
                    <span class="badge p-2 border w-100" style="background-color:lavenderblush;margin-top:5px">@type.BookType.Name</span>
                }
            </div>
            <div class="col-6 border-0">
                @foreach (var author in Model.BookAuthor)
                {
                    <span class="badge p-2 border w-100" style="background-color: aliceblue;margin-top:5px">@author.Author.Name @author.Author.Surname</span>
                }
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <b><label asp-for="@Model.ReleaseDate"></label></b>
                <p> @Model.ReleaseDate.ToString("MM/dd/yyyy")</p>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <b><label asp-for="@Model.Description"></label></b>
                <p> @shortDescription...</p>
            </div>
            <div class="col-6 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
            <div class="col-6 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark bg-secondary form-control btn-sm p-2" style="height:40px">Reserve</a>
            </div>
        </div>
    </div>
</div>
