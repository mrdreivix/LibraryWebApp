@model List<Worker>

<table class="table table-bordered table-striped" style="width:85%" align="center">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>User Name</label>
</th>
            <th>
                <label>Phone Number</label>
            </th>
            <th>
                <label>Full Name</label>
            </th>
            <th>
                <label>Earnings</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td width="20%">@user.Id</td>
            <td width="20%">@user.UserName</td>
            <td width="20%">@user.PhoneNumber</td>
            <td width="20%">@user.FullName</td>
            <td width="20%">@user.Earnings</td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-danger mx-2" asp-route-Id="@user.Id" asp-action="Delete">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a asp-controller="Users" asp-route-Id="@user.Id" asp-action="Edit" class="btn btn-primary mx-2">
                        <i class="fas fa-edit"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
<br/>
<br />