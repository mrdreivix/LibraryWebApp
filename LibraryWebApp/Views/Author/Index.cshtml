@model IEnumerable<LibraryWebApp.Models.Author>

@{
    var modelTemplate = new Author();
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Authors List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Add new Author</a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:55%" align="center">
            <thead>
                <tr>
                    <th>
                        <label asp-for="@modelTemplate.Id"/>
                    </th>
                    <th>
                        <label asp-for="@modelTemplate.Name"/>
                    </th>
                    <th>
                        <label asp-for="@modelTemplate.Surname"/>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td width="20%">@author.Id</td>
                        <td width="20%">@author.Name</td>
                        <td width="20%">@author.Surname</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Author" asp-route-Id="@author.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@author.Id" asp-action="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No type exists.</p>
    }
</div>