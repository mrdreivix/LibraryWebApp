@model IEnumerable<LibraryWebApp.Models.Author>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Authors List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Add new Author</a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:55%" align="center">
            <thead>
                <tr>
                    <th>
                        Author Id.
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Id</td>
                    <td width="20%">@obj.Name</td>
                    <td width="20%">@obj.Surname</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Author" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@obj.Id" asp-action="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No type exists.</p>
    }
</div>