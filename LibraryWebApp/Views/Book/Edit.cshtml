@model LibraryWebApp.Models.BookVM

<form method="post">
    <input asp-for="Book.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Author Details</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Title" class="form-control" />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Amount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Amount" class="form-control" />
                        <span asp-validation-for="Book.Amount" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.ReleaseDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.ReleaseDate" type="date"
                               min="1700-01-01" max="2022-12-31" class="form-control" />
                        <span asp-validation-for="Book.ReleaseDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Book.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Description" class="form-control" />
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>Choose the author:</label>
                    </div>
                    <div class="col-8">


                        <br />
                        <select name="AuthorsId" asp-for="AuthorsId" style="width:70%" multiple=multiple>
                            @foreach (var author in Model.Authors)
                            {
                                if (Model.BookAuthors.Any(x => x.IdAuthor == author.Id))
                                {
                                    <option selected value="@author.Id">@author.Name  @author.Surname </option>
                                }
                                else
                                {
                                    <option value="@author.Id">@author.Name  @author.Surname </option>
                                }
                            }

                        </select>
                        <span asp-validation-for="AuthorsId" class="text-danger"></span>

                    </div>
                </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Choose type of book:</label>
                        </div>
                        <div class="col-8">


                            <br />
                            <select name="TypesOfBookId" asp-for="TypesOfBookId" style="width:70%" multiple=multiple>
                                @foreach (var type in Model.Types)
                                {
                                    if (Model.BookTypes.Any(x => x.IdTypeOfBook == type.Id))
                                    {
                                        <option selected value="@type.Id">@type.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                }

                            </select>
                            <span asp-validation-for="TypesOfBookId" class="text-danger"></span>
                            </div>
                        </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <br />
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-primary w-100">Back</a>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</form>

