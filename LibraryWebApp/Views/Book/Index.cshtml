@model IEnumerable<LibraryWebApp.Models.Book>
@{
    var bookModelTemplate = new Book();
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Add new Book</a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:75%" align="center">
            <thead>
                <tr>
                    <th>
                        <label asp-for="@bookModelTemplate.Id" />Id.
                    </th>
                    <th>
                        <label asp-for="@bookModelTemplate.Title" />Title
                    </th>
                    <th>
                        <label asp-for="@bookModelTemplate.Description" /> Description
                    </th>
                    <th>
                        <label asp-for="@bookModelTemplate.Amount" /> Amount
                    </th>
                    <th>
                        <label asp-for="@bookModelTemplate.BookAuthor" /> Authors
                    </th>
                    <th>
                        <label asp-for="@bookModelTemplate.ReleaseDate" />Release Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td width="3%">@book.Id</td>
                        <td width="3%">@book.Title</td>
                        <td width="30%">@book.Description</td>
                        <td width="3%">@book.Amount</td>
                        <td width="30%">
                            @foreach (var bookAuthor in book.BookAuthor)
                            {
                                <pan>@bookAuthor.Author.Name&nbsp;@bookAuthor.Author.Surname,&nbsp;&nbsp;&nbsp;</pan>
                            }
                        </td>
                        <td width="30%">@book.ReleaseDate.ToString("dd-MM-yyyy") </td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Book" asp-route-Id="@book.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-danger mx-2" asp-route-Id="@book.Id" asp-action="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No type exists.</p>
    }
</div>