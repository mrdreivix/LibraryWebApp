@model IEnumerable<LibraryWebApp.Models.Book>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Add new Book</a>
        </div>
    </div>


    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%" align="center">
            <thead>
                <tr>
                    <th>
                        Id.
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Authors
                    </th>
                    <th>
                        Book Types
                    </th>
                    <th>
                        Release Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="3%">@obj.Id</td>
                    <td width="3%">@obj.Title</td>
                    <td width="30%">@obj.Description</td>
                    <td width="3%">@obj.Amount</td>
                    <td width="22%">
                        @foreach (var bookAuthor in obj.BookAuthor)
                        {
                            <pan>@bookAuthor.Author.Name&nbsp;@bookAuthor.Author.Surname,&nbsp;&nbsp;&nbsp;</pan>
                        }
                    </td>
                    <td width="22%">
                        @foreach (var type in obj.BookType)
                        {
                            <pan>@type.TypeOfBook.Name,&nbsp;</pan>
                        }
                    </td>
                    <td width="15%">@obj.ReleaseDate.ToString("dd-MM-yyyy") </td>

                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-Id="@obj.Id" asp-action="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No type exists.</p>
    }
</div>